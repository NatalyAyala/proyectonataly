#include <iostream>

int main() {
    int opcion;
    std::cout << "Ingresa un número entre 1 y 3: ";
    std::cin >> opcion;

    switch (opcion) {
        case 1:
            std::cout << "Elegiste la opción 1.\n";
            break;
        case 2:
            std::cout << "Elegiste la opción 2.\n";
            break;
        case 3:
            std::cout << "Elegiste la opción 3.\n";
            break;
        default:
            std::cout << "Opción no válida.\n";
            break;
    }

    return 0;
}
